{
  "compilerOptions": {
    // "noEmit": true,
    // "module": "esnext",
    // "moduleResolution": "bundler",
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDeclarationOnly": true,
    "target": "ES2022",
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@payload-config": ["./src/copied/payload.config.ts"],
      "@payload-types": ["./src/copied/payload-types.ts"],
      // "@/*": ["./src/**/*"],
      // "@dev/*": ["./dev/**/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  // "exclude": ["./dev/**/*"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./dev/next-env.d.ts"]
}
